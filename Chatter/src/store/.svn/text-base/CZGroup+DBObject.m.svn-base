#import "CZGroup+DBObject.h"
#import "CZDocument+DBObject.h"
#import "DBObject.h"
#import "DBConnection.h"
#import "DBResult.h"
#import "DBStatement.h"
#import "Easy.h"

@interface CZGroup (PrivateMethods)
- (CZGroup *)__dbobjectHandleResult:(DBResult *)result;
@end

@implementation CZGroup (DBObject)

/**
 *
 *
 */
+ (NSArray *)dbobjectSelectAllForDocument:(CZDocument *)document
{
	BOOL retval = TRUE;
	DBConnection *connection = nil;
	DBResult *result = nil;
	DBStatement *statement = nil;
	CZGroup *object = nil;
	NSMutableArray *objects = [NSMutableArray array];
	
	// from the document to the db connection
	if (nil == (connection = document.dbconnection))
		@throw [NSException exceptionWithName:CZExceptionNoDbConnection reason:@"No connection associated with this document." userInfo:nil];
	
	// get the prepared statement for this operation
	if (nil == (statement = [connection statementForName:@"group_select_all"]))
		@throw [NSException exceptionWithName:CZExceptionNoStatement reason:@"Could not find the required statement" userInfo:nil];
	
	// execute statement
	if (![connection exec:statement result:&result])
		CZ_DBOBJ_ERROR(statement,retval,done);
	
	// handle result
	CZ_DBOBJ_HANDLE([CZGroup group], @selector(__addCachedGroup:));
	
done:
	[statement clear];
	return objects;
}

/**
 *
 *
 */
+ (CZGroup *)dbobjectSelectForName:(NSString *)name inParent:(NSObject *)parent
{
	BOOL retval = TRUE;
	DBConnection *connection = nil;
	DBResult *result = nil;
	DBStatement *statement = nil;
	CZGroup *group = nil;
	CZDocument *document = nil;
	NSUInteger groupId = 0;
	
	if ([parent isKindOfClass:[CZGroup class]])
		document = ((CZGroup *)parent).document;
	else if ([parent isKindOfClass:[CZDocument class]])
		document = (CZDocument *)parent;
	
	// get the connection from the parent document
	if (nil == (connection = document.dbconnection))
		@throw [NSException exceptionWithName:CZExceptionNoDbConnection reason:@"No connection associated with the parent." userInfo:nil];
	
	// get the prepared statement for this operation
	if (nil == (statement = [connection statementForName:@"group_select_by_name_parent"]))
		@throw [NSException exceptionWithName:CZExceptionNoStatement reason:@"Could not find the required statement" userInfo:nil];
	
	if ([parent isKindOfClass:[CZGroup class]])
		groupId = ((CZGroup *)parent).databaseId;
	
	// setup
	{
		[statement bindString:name atIndex:1];
		
		if (groupId != 0)
			[statement bindUint32:groupId atIndex:2];
		else
			[statement bindNullAtIndex:2];
	}
	
	// execute statement
	if (![connection exec:statement result:&result])
		CZ_DBOBJ_ERROR(statement,retval,done);
	
	// handle result
	if (![result isDone]) {
		[result getUint32:&groupId atColumn:0];
		
		if (groupId != 0)
			group = [document groupWithId:groupId];
	}
	
done:
	[statement clear];
	return group;
}

/**
 *
 *
 */
- (BOOL)dbobjectInsert
{
	BOOL retval = TRUE;
	DBConnection *connection = nil;
	DBResult *result = nil;
	DBStatement *statement = nil;
	NSUInteger databaseId;
	
	// from the document to the db connection
	if (nil == (connection = self.document.dbconnection))
		@throw [NSException exceptionWithName:CZExceptionNoDbConnection reason:@"No connection associated with this document." userInfo:nil];
	
	// get the prepared statement for this operation
	if (nil == (statement = [connection statementForName:@"group_insert"]))
		@throw [NSException exceptionWithName:CZExceptionNoStatement reason:@"Could not find the required statement" userInfo:nil];
	
	// if this object already has a database key then don't insert it again
	if (mDatabaseId != 0)
		@throw [NSException exceptionWithName:CZExceptionIllegalOperation reason:@"Can not insert an already inserted object" userInfo:nil];
	
	// setup
	{
		if (mParentId != 0 || 0 != (mParentId = mParent.databaseId))
			[statement bindUint32:mParentId atIndex:1];
		else
			[statement bindNullAtIndex:1];
		
		[statement bindString:mName atIndex:2];
		[statement bindUint32:mState atIndex:3];
	}
	
	// execute statement
	if (![connection exec:statement result:&result])
		CZ_DBOBJ_ERROR(statement,retval,done);
	
	// get primary key
	if (TRUE == [connection lastInsertRowId:&databaseId]) {
		self.databaseId = databaseId;
		[self.document __addCachedGroup:(CZGroup *)[self dbobjectCopy]];
	}
	else
		NSLog(@"%s.. failed to lastInsertRowId()", __PRETTY_FUNCTION__);
	
done:
	[statement clear];
	return retval;
}

/**
 *
 *
 */
- (BOOL)dbobjectUpdate
{
	BOOL retval = TRUE;
	DBConnection *connection = nil;
	DBResult *result = nil;
	DBStatement *statement = nil;
	
	// from the document to the db connection
	if (nil == (connection = self.document.dbconnection))
		@throw [NSException exceptionWithName:CZExceptionNoDbConnection reason:@"No connection associated with this document." userInfo:nil];
	
	// get the prepared statement for this operation
	if (nil == (statement = [connection statementForName:@"group_update_by_id"]))
		@throw [NSException exceptionWithName:CZExceptionNoStatement reason:@"Could not find the required statement" userInfo:nil];
	
	// the record must already have been inserted before we can attempt to update it
	if (mDatabaseId == 0)
		@throw [NSException exceptionWithName:CZExceptionIllegalOperation reason:@"Can not update a record that hasn't yet been inserted" userInfo:nil];
	
	mParentId = mParent.databaseId;
	
	if ([[self.document __getCachedGroupForGroup:self] dbobjectCompare:self] == DBObjectComparisonEquals)
		return TRUE;
	
	// setup
	{
		if (mParentId != 0)
			[statement bindUint32:mParentId atIndex:1];
		else
			[statement bindNullAtIndex:1];
		
		[statement bindString:mName atIndex:2];
		[statement bindUint32:mState atIndex:3];
		[statement bindUint32:mDatabaseId atIndex:4];
	}
	
	// execute statement
	if (![connection exec:statement result:&result])
		CZ_DBOBJ_ERROR(statement,retval,done);
	
	[self.document __addCachedGroup:(CZGroup *)[self dbobjectCopy]];
	
done:
	[statement clear];
	return retval;
}

/**
 *
 *
 */
- (BOOL)dbobjectDelete
{
	BOOL retval = TRUE;
	DBConnection *connection = nil;
	DBResult *result = nil;
	DBStatement *statement = nil;
	
	// from the document to the db connection
	if (nil == (connection = self.document.dbconnection))
		@throw [NSException exceptionWithName:CZExceptionNoDbConnection reason:@"No connection associated with this document." userInfo:nil];
	
	// get the prepared statement for this operation
	if (nil == (statement = [connection statementForName:@"group_delete_by_id"]))
		@throw [NSException exceptionWithName:CZExceptionNoStatement reason:@"Could not find the required statement" userInfo:nil];
	
	// the record must already have been inserted before we can attempt to delete it
	if (mDatabaseId == 0)
		@throw [NSException exceptionWithName:CZExceptionIllegalOperation reason:@"Can not delete a record that hasn't yet been inserted" userInfo:nil];
	
	// setup
	[statement bindUint32:mDatabaseId atIndex:1];
	
	// execute statement
	if (![connection exec:statement result:&result])
		CZ_DBOBJ_ERROR(statement,retval,done);
	
	[[self retain] autorelease];
	[self.document __removeGroup:self];
	[self.document __removeCachedGroup:self];
	
done:
	[statement clear];
	return retval;
}

/**
 *
 *
 */
- (DBObjectComparisonResult)dbobjectCompare:(id<DBObject>)anObject
{
	CZGroup *group = (CZGroup *)anObject;
	
	if (group->mName == mName &&
			group->mParent == mParent &&
			group->mParentId == mParentId &&
			group->mState == mState)
		return DBObjectComparisonEquals;
	else
		return DBObjectComparisonNotEquals;
}

/**
 *
 *
 */
- (id<DBObject>)dbobjectCopy
{
	CZGroup *group = [self copy];
	
	group->mName = [mName retain];
	group->mParent = mParent;
	group->mParentId = mParentId;
	group->mState = mState;
	
	return group;
}





#pragma mark -
#pragma mark Private

/**
 *
 *
 */
- (CZGroup *)__dbobjectHandleResult:(DBResult *)result
{
	[result getUint32:&mDatabaseId atColumn:0];
	[result getUint32:&mParentId atColumn:1];
	[result getString:&mName atColumn:2];
	[result getUint32:&mState atColumn:3];
	
	return self;
}

@end
